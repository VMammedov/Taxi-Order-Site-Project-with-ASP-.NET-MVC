@model EntityLayer.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePasswordDriver";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="service_section layout_padding-bottom" style="background-color:#f7f7f7; padding:2rem">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5  offset-md-1">
                <div class="contact_form">
                    <h3>
                        <i class="fas fa-user-lock"></i> Change Your Password
                    </h3>
                    <form action="/Driver/ChangePasswordDriver" method="post">
                        <label for="name">Old Password</label>
                        <input type="password" class="form-control" name="oldpassword" value="" required />
                        @Html.ValidationMessageFor(x => x.oldpassword, "", new { @style = "color:red" })
                        <label for="surname">New Password</label>
                        <input type="password" class="form-control" name="password1" required />
                        @Html.ValidationMessageFor(x => x.password1, "", new { @style = "color:red" })
                        <label for="surname">New Password Again</label>
                        <input type="password" class="form-control" name="password2" required />
                        @Html.ValidationMessageFor(x => x.password2, "", new { @style = "color:red" })
                        @if (!string.IsNullOrEmpty((string)TempData["ErrorMessage"]))
                        {
                            <h5 style="color:red">
                                <i class="fas fa-exclamation-circle text-danger"></i> @TempData["ErrorMessage"]
                            </h5>
                        }
                        <br />
                        <button class="btn btn-warning" type="submit">Change Password</button>
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

