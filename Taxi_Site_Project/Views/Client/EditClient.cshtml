@model EntityLayer.Concrete.Client

@{
    ViewBag.Title = "EditClient";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="service_section layout_padding-bottom" style="background-color:#f7f7f7; padding:2rem">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-5  offset-md-1">
                <div class="contact_form">
                    <h4>
                        Edit Profile
                    </h4>
                    <form action="/Client/EditClient" method="post" enctype="multipart/form-data">
                        @Html.HiddenFor(x => x.ClientID)
                        @Html.HiddenFor(x => x.ClientStatus)
                        @Html.HiddenFor(x => x.ClientPasswordHash)
                        @Html.HiddenFor(x => x.ClientPasswordSalt)
                        @Html.HiddenFor(x => x.ClientImage)
                        <label for="name">Name</label>
                        @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control", id = "name" })
                        @Html.ValidationMessageFor(x => x.ClientName, "", new { @style = "color:red" })
                        <br />
                        <label for="surname">SurName</label>
                        @Html.TextBoxFor(x => x.ClientSurName, new { @class = "form-control", id = "surname" })
                        @Html.ValidationMessageFor(x => x.ClientSurName, "", new { @style = "color:red" })
                        <br />
                        <label for="mail">Email</label>
                        @Html.TextBoxFor(x => x.ClientMail, new { @class = "form-control", id = "mail" })
                        @Html.ValidationMessageFor(x => x.ClientMail, "", new { @style = "color:red" })
                        <br />
                        <label for="number">Number</label>
                        @Html.TextBoxFor(x => x.ClientNumber, new { @class = "form-control", id = "number" })
                        @Html.ValidationMessageFor(x => x.ClientNumber, "", new { @style = "color:red" })
                        <br />
                        <label for="prof">Profession</label>
                        @Html.TextBoxFor(x => x.ClientProfession, new { @class = "form-control", id = "prof" })
                        @Html.ValidationMessageFor(x => x.ClientProfession, "", new { @style = "color:red" })
                        <br />
                        <label for="img">Image</label>
                        <input type="file" style="padding:5px !important; height:2.6rem" name="ClientImage" class="form-control" id="img" />
                        @Html.ValidationMessageFor(x => x.ClientImage, "", new { @style = "color:red" })
                        <br />
                        <label for="about">About</label>
                        @Html.TextAreaFor(x => x.ClientAbout, new { @class = "form-control", style = "height:170px", id = "about" })
                        @Html.ValidationMessageFor(x => x.ClientAbout, "", new { @style = "color:red" })
                        <br />
                        <div>
                            <h5>Gender</h5>
                            <label><i class="fas fa-male"></i>  Male</label>
                            @Html.RadioButtonFor(x => x.Sex, value: "Male")
                            <label><i class="fas fa-female" style="padding-left:1rem"></i>  Female</label>
                            @Html.RadioButtonFor(x => x.Sex, value: "Female")
                        </div>
                        @Html.ValidationMessageFor(x => x.Sex, "", new { @style = "color:red" })
                        <br />
                        <button class="btn btn-warning" type="submit">Save</button>
                        <a href="/Client/ChangePasswordClient" class="btn btn-secondary" style="color:white"><i class="fas fa-lock"></i> Change Password</a>
                        <a href="/Client/ClientDelete" class="btn btn-danger" style="color:white"><i class="fas fa-trash"></i> Delete Account</a>
                        <br />
                    </form>
                </div>
            </div>
            <div class="col-md-6 px-0">
                <div class="img-box" style="text-align:center">
                    <img class="img-edit" src="@Model.ClientImage" alt="">
                </div>
            </div>
        </div>
    </div>
</section>